{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Trajet list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Villedepart</th>
                <th>Villearrive</th>
                <th>Datedepart</th>
                <th>Datearrive</th>
                <th>Autoroute</th>
                <th>Bagage</th>
                <th>Participation</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('trajet_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.villeDepart }}</td>
                <td>{{ entity.villeArrive }}</td>
                <td>{% if entity.dateDepart %}{{ entity.dateDepart|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.dateArrive %}{{ entity.dateArrive|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.autoroute }}</td>
                <td>{{ entity.bagage }}</td>
                <td>{{ entity.participation }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('trajet_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('trajet_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('trajet_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
