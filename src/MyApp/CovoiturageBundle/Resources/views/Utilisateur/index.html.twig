{% extends 'layout.html.twig' %}

{% block body -%}
    <h1>Utilisateur list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nickname</th>
                <th>Civilite</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Email</th>
                <th>Mobile</th>
                <th>Telephone</th>
                <th>Datenaissance</th>
                <th>Hascar</th>
                <th>Commentaire</th>
                <th>Photo</th>
                <th>Isinternational</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('utilisateur_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nickname }}</td>
                <td>{{ entity.civilite }}</td>
                <td>{{ entity.nom }}</td>
                <td>{{ entity.prenom }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.mobile }}</td>
                <td>{{ entity.telephone }}</td>
                <td>{% if entity.dateNaissance %}{{ entity.dateNaissance|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.hasCar }}</td>
                <td>{{ entity.commentaire }}</td>
                <td>{{ entity.photo }}</td>
                <td>{{ entity.isInternational }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('utilisateur_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('utilisateur_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('utilisateur_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
